<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">

    <!-- Persistent cache directory -->
    <persistence directory="spring-boot-ehcache/cache"/>

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>uz.md.trello.utils.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">
                20
            </disk>
        </resources>
    </cache-template>


    <cache alias="workspaceDTO" uses-template="default">
        <key-type>java.util.UUID</key-type>
        <value-type>uz.md.trello.dtos.workspace.WorkspaceDTO</value-type>
    </cache>

    <cache alias="workspace" uses-template="default">
        <key-type>java.util.UUID</key-type>
        <value-type>uz.md.trello.domains.workspace.Workspace</value-type>
    </cache>

    <cache alias="workspaceUser" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>uz.md.trello.domains.workspace.WorkspaceUser</value-type>
    </cache>

    <cache alias="boards" uses-template="default">
        <key-type>java.util.UUID</key-type>
        <value-type>uz.md.trello.domains.board.Board</value-type>
    </cache>

    <cache alias="boardLists" uses-template="default">
        <key-type>java.util.UUID</key-type>
        <value-type>uz.md.trello.domains.list.BoardList</value-type>
    </cache>

    <cache alias="tasks" uses-template="default">
        <key-type>java.util.UUID</key-type>
        <value-type>uz.md.trello.domains.list.Task</value-type>
    </cache>

</config>